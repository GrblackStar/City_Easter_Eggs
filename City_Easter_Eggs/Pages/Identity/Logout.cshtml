@page
@model City_Easter_Eggs.Data.Identity.LogoutModel

<header>
	@{
        if (User.Identity!.IsAuthenticated)
        {
            <form class="form-inline" asp-page="/Identity/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Изход</button>
            </form>
        }
        else
        {
            <p>Успешен изход.</p>
        }
    }
</header>
